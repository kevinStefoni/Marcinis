@page
@model Marcinis.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<head>
    <link rel="stylesheet" href="/css/login.css" />
</head>

<section class="h-100 gradient-form" style="background-color: #eee;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-xl-10">
                <div class="card rounded-3 text-black">
                    <div class="row g-0">
                        <div class="col-lg-6">
                            <div class="card-body p-md-5 mx-md-4">

                                <div class="text-center">
                                    <img src="/images/Marcini's_Logo.png"
                                         style="width: 185px;" alt="logo">
                                </div>

                                <form method="post">
                                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                                    <div class="form-group row" style="margin-bottom:15px">
                                        <div class="col-1">
                                            <label asp-for="customer.EmailAddress"></label>
                                        </div>
                                        <div class="col-4">
                                            <input type="text" asp-for="customer.EmailAddress" class="form-control" style="width: 250px; margin: 2px" />
                                        </div>
                                    </div>

                                    <div class="form-group row" style="margin-bottom:15px">
                                        <div class="col-1">
                                            <label asp-for="customer.Password"></label>
                                        </div>
                                        <div class="col-4">
                                            <input type="password" asp-for="customer.Password" class="form-control" style="width: 250px; margin: 2px" />
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <div class="col-1">
                                            <input type="submit" class="btn btn-primary" value="Login" />
                                        </div>
                                    </div>
                                </form>

                                <div class="d-flex align-items-center justify-content-center pb-4">
                                    <p class="mb-0 me-2">Don't have an account?</p>
                                    <a class="text-dark" asp-area="" asp-page="./Register">Create Account</a>
                                </div>

                            </div>
                        </div>
                        <div class="col-lg-6 d-flex align-items-center">
                            <img src='/images/naples_italy_1.jpg' style="width:400px; height=400px;">
                            <div class="text-black px-3 py-4 p-md-5 mx-md-4 bg-image">
                                <h4 class="mb-4">Benvenuto!</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>