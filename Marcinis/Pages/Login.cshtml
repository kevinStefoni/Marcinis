@page
@model Marcinis.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<head>
    <link rel="stylesheet" href="/css/login.css" />
    <meta charset="UTF-8">
</head>

<div class="cont">

    <!-- sign-in part-->
    <form method="post">
        <div class="form sign-in">
            <div class="text-center">
                <img src="/images/Marcini's_Logo.png" style="width: 185px;" alt="logo">
            </div>
            <h2 class="HelloTitle">Benevenuto!</h2>
        
            <label>
                <span>Email</span>
                <input type="email" asp-for="Customer.LoginCredentials.EmailAddress" />
                <p><span asp-validation-for="Customer.LoginCredentials.EmailAddress" class="text-danger"></span></p>
            </label>

            <label>
                <span>Password</span>
                <input type="password" asp-for="Customer.LoginCredentials.Password" />
                <p><span asp-validation-for="Customer.LoginCredentials.Password" class="text-danger"></span></p>
            </label>

            <button asp-page-handler="Login" class="submit">Sign In</button>
        </div>
    </form>

    <!-- hidden part for sign up-->
    <div class="sub-cont">
        <div class="img">
            <div class="img__text m--up">
                <h2>New customer?</h2>
                <p>Sign up and discover great Italian cuisine!</p>
            </div>
            <div class="img__text m--in">
                <h2>Coming back?</h2>
                <p>Come on! Just sign in. We've missed you!</p>
            </div>
            <div class="img__btn">
                <span class="m--up">Sign Up</span>
                <span class="m--in">Sign In</span>
            </div>
        </div>

        <div class="form sign-up">
            <h2>Register Account</h2>
            <form method="post">
                <label>
                    <span>Fisrt Name</span>
                    <input type="text" asp-for="Customer.FirstName" />
                    <p><span asp-validation-for="Customer.FirstName" class="text-danger"></span></p>
                </label>

                <label>
                    <span>Last Name</span>
                    <input type="text" asp-for="Customer.LastName" />
                    <p><span asp-validation-for="Customer.LastName" class="text-danger"></span></p>
                </label>
            
                <label>
                    <span>Email</span>
                    <input type="email" asp-for="Customer.LoginCredentials.EmailAddress" />
                    <p><span asp-validation-for="Customer.LoginCredentials.EmailAddress" class="text-danger"></span></p>
                </label>

                <label>
                    <span>Password</span>
                    <input type="password" asp-for="Customer.LoginCredentials.Password" />
                    <p><span asp-validation-for="Customer.LoginCredentials.Password" class="text-danger"></span></p>
                </label>

                <label>
                    <span>Phone Number</span>
                    <input type="text" asp-for="Customer.PhoneNumber" />
                    <p><span asp-validation-for="Customer.PhoneNumber" class="text-danger"></span></p>
                </label>

                <button asp-page-handler="Register" class="submit">Sign Up</button>
            </form>
        </div>
    </div>

</div>

<script src="/js/login.js" type="text/javascript"></script>