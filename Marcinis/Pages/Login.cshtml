@page
@model Marcinis.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<head>
    <link rel="stylesheet" href="/css/login.css" />
</head>

<section class="h-100 gradient-form" style="background-color: #eee;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-xl-10">
                <div class="card rounded-3 text-black">
                    <div class="row g-0">
                        <div class="col-lg-6">
                            <div class="card-body p-md-5 mx-md-4">

                                <div class="text-center">
                                    <img src="/images/Marcini's_Logo.png"
                                         style="width: 185px;" alt="logo">
                                </div>

                                <h4 style="text-align:center">Benevenuto!</h4>

                                <form method="post">                                    
                                    <div class="form-outline mb-4">
                                        <input type="text" asp-for="customer.EmailAddress" class="form-control" style="width: 250px; margin: 2px" />
                                        <label class="form-label" for="form2Example11">Email</label>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input type="password" asp-for="customer.Password" class="form-control" style="width: 250px; margin: 2px" />
                                        <label class="form-label" for="form2Example22">Password</label>
                                    </div>

                                    <div class="text-center pt-1 mb-5 pb-1">
                                        <input type="submit" class="btn btn-primary" value="Login" />
                                    </div>
                                </form>
                                <div class="d-flex align-items-center justify-content-center pb-4">
                                    <p class="mb-0 me-2">Don't have an account?</p>
                                    <a class="text-dark" asp-area="" asp-page="./Register">Create Account</a>
                                </div>

                            </div>
                        </div>

                    <div class="col-lg-6 d-flex align-items-center">
                        <img src='/images/naples_italy_overview.jpeg' style="width:400px; height:400px;">
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>