@page
@model Marcinis.Pages.LoginSelectModel
@{
    ViewData["Title"] = "Login";
}

<head>
    <link rel="stylesheet" href="/css/loginselect.css" />
</head>
<div id="lButtonDiv">
    <input id="loginButton" type="submit" class="btn" value="Login" />
</div>

<hr/>

<div id="guestCheckoutDiv">
    <h1 id="guestLabel">Guest Checkout</h1>

    <form method="post">
        <div>
            <label>First Name</label>
            <br />
            <input type="text" asp-for="customer.FirstName"/>
            <span asp-validation-for="customer.FirstName" class="text-danger"></span>
        </div>
        <div>
            <label>Last Name</label>
            <br />
            <input type="text" asp-for="customer.LastName"/>
            <span asp-validation-for="customer.LastName" class="text-danger"></span>
        </div>
        <div>
            <label>Email Address</label>
            <br />
            <input type="text" asp-for="customer.LoginCredentials.EmailAddress"/>
            <span asp-validation-for="customer.LoginCredentials.EmailAddress" class="text-danger"></span>
        </div>
        <div>
            <label>Phone Number</label>
            <br />
            <input type="text" asp-for="customer.PhoneNumber"/>
            <span asp-validation-for="customer.PhoneNumber" class="text-danger"></span>
        </div>

        <div>
            <input id="guestButton" type="submit" class="btn" value="Guest Checkout" />
        </div>
    </form>
</div>