@page
@model Order
@{
    ViewData["Title"] = "Order";
}

<head>
    <link rel="stylesheet" href="/css/order.css"/>
</head>

<nav id="menuNavBar" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-fixed-top border box-shadow mb-3">
    <div class="container">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
            <ul class="navbar-nav flex-grow-1">
                <li id=menuLi class="nav-item">
                    <a id=aLi class="nav-link" href="#appetizers">Appetizers</a>
                </li>
                <li id=menuLi class="nav-item">
                    <a id=aLi class="nav-link" href="#pasta">Pasta</a>
                </li>
                <li id=menuLi class="nav-item">
                    <a id=aLi class="nav-link" href="#pizza">Pizza</a>
                </li>
                <li id=menuLi class="nav-item">
                    <a id=aLi class="nav-link" href="#dessert">Dessert</a>
                </li>
            </ul>
        </div>
    </div>
</nav>



<h1 id="appetizers">Appetizers</h1>
<h1 id="pasta">Pasta</h1>
<h1 id="pizza">Pizza</h1>
<h1 id="dessert">Dessert</h1>

<div id="genCard" class="card w-25">
    <div class="bg-image hover-overlay ripple" data-mdb-ripple-color="light">
        <img src="/Menu Items/Appetizers/breadsticks.jpg" class="img-fluid" style="object-fit: cover;"/>
            <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
    </div>
    <div class="card-body">
        <h5 class="card-title">Breadsticks</h5>
        <p class="card-text">Enjoy breadsticks baked fresh from the oven!</p>
        <input id="orderBreadsticks" type="submit" class="btn" value="Order" />
    </div>
</div>




